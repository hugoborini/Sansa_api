{% extends 'base.html.twig' %}

{% block title %}Hello AssoInfoController!{% endblock %}

{% set services = ['Espace de repos', 'Halte de nuit', 'Soins enfants', 'Dépistage', 'Fontaine à eau',  'Prise',  'Laverie', 'Bien-être', 'Téléphone', 'Boutique solidaire', 'Bagagerie',  'Psychologie',  'Conseil logement', 'Accompagnement social', 'Colis Alimentaire', 'Restauration assise'] %}

{% block body %}
<div class="d-f p-1 mh-95v">
    {% include '@App/Components/navbar-admin.html.twig' with {'currentPage': currentPage} %}
    <div class="pt-1 fb-90">
        <h1 class="ff-body fs-xl c-black-60 fw-700 mb-2 mt-0">{{asso.organizationName}}</h1>
        <div class="bgc-white br-15 b-blue d-f jc-sb p-2c5 mb-2">
           <div class="fb-70 pr-1">
                <p class="ff-body c-black-60 fs-l fw-700 m-0 mb-0c5">Demande en cours</p>
                <p class="ff-body c-black-60 fs-s m-0">Si toutes les informations ne sont pas correct, ou qu’il manque une infos importante,
                vous pouvez renvoyer cette demande à l’association qui complètera son inscription</p>
           </div>
           <div class="d-f ai-c">
                <p class="ff-body fw-700 c-blue m-0 b-blue br-xxxl pl-2 pt-1 pr-2 pb-1 mw-fc mr-1 openModal c-p">Refusée</p>
                <a  href="{{path("app_asso_valide", {idAsso: asso.id})}}" class="ff-body fw-700 c-white m-0 b-blue br-xxxl pl-2 pt-1 pr-2 pb-1 bgc-blue mw-fc c-p td-n">Validée</a>
           </div>
        </div>
        <div class="d-f">
            <div class="bgc-white bs-light br-15 p-2 mb-2 mr-0c75 fb-50">
                <p class="ff-body c-black fs-m fw-700 m-0 mb-2">Identification</p>
                <div class="mb-1c5">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0">SIRET</p>
                    <p class="ff-body c-black fs-s m-0">{{asso.siret}}</p>
                </div>
                <div class="mb-1c5">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0">Numéro RNA</p>
                    <p class="ff-body c-black fs-s m-0">{{asso.rna}}</p>
                </div>
                <div class="mb-1c5">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0">Date d’inscription</p>
                    <p class="ff-body c-black fs-s m-0">{{asso.lastUpdata|date("d/m/Y")}}</p>
                </div>
            </div>
            <div class="ml-0c75 fb-50 mb-2">
                <p class="ff-body c-black fs-m fw-700 m-0 mb-1c5">Mission</p>
                <p class="ff-body c-black fs-s m-0 mb-1 lh-24">{{asso.description}}</p>
                <p class="ff-body c-black-40 fs-s m-0">Dernières mises à jour le {{asso.lastUpdata|date("d M Y")}}</p>
            </div>
        </div>
        <div class="d-f">
            <div class="bgc-white bs-light br-15 p-2 mb-2 mr-0c75 fb-50">
                <p class="ff-body c-black fs-m fw-700 m-0 mb-2">Horaires</p>
                <div class="mb-1c5 d-f">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0 fb-30">Lundi</p>

                    <p class="ff-body c-black-60 fs-s m-0">{{asso.hoursId.0.monday}}</p>
                </div>
                <div class="mb-1c5 d-f">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0 fb-30">Mardi</p>
                    <p class="ff-body c-black-60 fs-s m-0">{{asso.hoursId.0.tuesday}}</p>
                </div>
                <div class="mb-1c5 d-f">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0 fb-30">Mercredi</p>
                    <p class="ff-body c-black-60 fs-s m-0">{{asso.hoursId.0.wednesday}}</p>
                </div>
                <div class="mb-1c5 d-f">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0 fb-30">Jeudi</p>
                    <p class="ff-body c-black-60 fs-s m-0">{{asso.hoursId.0.thurday}}</p>
                </div>
                <div class="mb-1c5 d-f">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0 fb-30">Vendredi</p>
                    <p class="ff-body c-black-60 fs-s m-0">{{asso.hoursId.0.friday}}</p>
                </div>
                <div class="mb-1c5 d-f">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0 fb-30">Samedi</p>
                    <p class="ff-body c-black-60 fs-s m-0">{{asso.hoursId.0.saturday}}</p>
                </div>
                <div class="mb-1c5 d-f">
                    <p class="ff-body c-black-60 fs-s fw-700 m-0 fb-30">Dimanche</p>
                    <p class="ff-body c-black-60 fs-s m-0">{{asso.hoursId.0.sunday}}</p>
                </div>
            </div>
            <div class="bgc-white bs-light br-15 p-2 mb-2 mr-0c75 fb-50">
                <p class="ff-body c-black fs-m fw-700 m-0 mb-2">Informations</p>
                <div class="mb-1c5 d-f ai-c">
                    <p class="ff-body c-black-60 fs-xs fw-700 m-0 fb-10 lh-0">{% include '@App/img/pictos/map.html.twig' %}</p>
                    <p class="ff-body c-black-60 fs-xs m-0 fb-90">{{asso.adress}}</p>
                </div>
               <div class="mb-1c5 d-f ai-c">
                    <p class="ff-body c-black-60 fs-xs fw-700 m-0 fb-10 lh-0">{% include '@App/img/pictos/tel.html.twig' %}</p>
                    <p class="ff-body c-black-60 fs-xs m-0 fb-90">{{asso.phoneNumber}}</p>
                </div>
                {% if asso.website is defined and asso.website is not empty %}
                    <div class="mb-1c5 d-f ai-c">
                        <p class="ff-body c-black-60 fs-xs fw-700 m-0 fb-10 lh-0">{% include '@App/img/pictos/link.html.twig' %}</p>
                        <a href="{{asso.website}}" class="ff-body c-black-60 fs-xs m-0 fb-90 td-n">{{asso.website}}</a>
                    </div>
                {% endif %}
                <div class="mb-1c5 d-f ai-c">
                    <p class="ff-body c-black-60 fs-xs fw-700 m-0 fb-10 lh-0">{% include '@App/img/pictos/langages.html.twig' %}</p>
                    <p class="ff-body c-black-60 fs-xs m-0 fb-90">{{asso.spokenLanguage}}</p>
                </div>
                <div class="mb-1c5 d-f ai-c">
                    <p class="ff-body c-black-60 fs-xs fw-700 m-0 fb-10 lh-0">{% include '@App/img/pictos/appointment.html.twig' %}</p>
                    <p class="ff-body c-black-60 fs-xs m-0 fb-90">{{asso.byAppointment ? "Sur rendez-vous" : "Sans rendez-vous"}}</p>
                </div>
            </div>
        </div>
        <div class="bgc-white br-15 bs-light p-2c5 mb-2">
            <p class="ff-body c-black fs-m fw-700 m-0 mb-2">Services proposés</p>
            <div class="d-f fw-w">
                 {% for service in asso.servicesId %}
                    <div class="mb-1c5 d-f ai-c fb-25">
                        <p class="ff-body c-black-60 fs-xs fw-700 m-0 mr-1 lh-0">{% include '@App/img/services/' ~ service.serviceName|lower|replace({' ' : '_', 'é' : 'e', 'è' : 'e', "'" : '', 'à' : 'a', 'ê' : 'e' }) ~ '.html.twig' %}</p>
                        <p class="ff-body c-black-60 fs-xs m-0">{{service.serviceName}}</p>
                    </div>
                {% endfor %} 
            </div>
        </div>
    </div>
</div>
 <div class="p-a t-0 l-0 bgc-black-5-60 p-r h-100 w-100 d-n modal">
    <div class="bgc-white bs-light p-2c5 pt-1 pr-1 d-f jc-c ai-c fd-c br-15 p-a t-50 l-50 ttxy-n50">
        <span class="as-fe closeModal">{% include '@App/img/close_cross.html.twig' %}</span>
        <img src="{{ asset('build/images/spotlight.png') }}" width="294" alt="spotlight" />
        <p class="ff-body fs-l c-black fw-700 ta-c mb-0c5">Êtes-vous sûr de vouloir supprimer cet utilisateur ?</p>
        <p class="ff-body fs-s c-black-20 ta-c mb-2 m-0">Êtes-vous sûr de vouloir supprimer cet utilisateur ? </p>
        <div class="d-f ai-c">
            <p class="ff-body fw-700 c-blue m-0 b-blue br-xxxl pl-2 pt-1 pr-2 pb-1 mw-fc mr-1">Annuler</p>
            <a href="{{path("app_asso_delete", {idAsso: asso.id})}}" class="td-n c-black"><p class="ff-body fw-700 c-white m-0 b-blue br-xxxl pl-2 pt-1 pr-2 pb-1 bgc-blue mw-fc">Supprimer</p></a>
        </div>
    </div>
</div>
{{ encore_entry_script_tags('openModal') }}
{% endblock %}
