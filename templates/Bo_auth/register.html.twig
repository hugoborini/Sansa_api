{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('tooglePassword') }}
{% endblock %}

{% block bodyStyle %}bgc-backo h-100v m-0{% endblock %}

{% block title %}Sansa | Register{% endblock %}

{% block body %}
    {{form_start(form)}}
    <section class="h-100v d-f ai-c">
        <div class="d-f jc-sa ai-fe w-100">
            <div class="fb-45">
                <img src="{{ asset('build/images/designer.png') }}" alt="" class="w-100" />
            </div>
            <div class="fb-45">
                <h2 class="ff-body fs-xl fw-600 c-black-60 pb-1 bb-black-10">S'inscrire</h2>
                <form class="p-r w-90" method="post" action="{{ path("app_bo_auth_login") }}">
                    <h3 class="ff-body fs-s c-black-40 fw-400 mb-0c5"><label for="loginName">Adresse e-mail</label></h3>
                    {{form_row(form.email, {'attr': {"placeholder" : "johndoe@gmail.com", "class":"br-15 p-0c75 b-black-10 w-100 c-black-60"}})}}

                    <h3 class="ff-body fs-s c-black-40 fw-400 mb-0c5"><label for="telephone">Téléphone</label></h3>
                    {{form_row(form.tel, {'attr': {"placeholder" : "0612345678", "class":"br-15 p-0c75 b-black-10 w-100 c-black-60"}})}}

                    <h3 class="ff-body fs-s c-black-40 fw-400 mb-0c5"><label for="password">Mot de passe*</label></h3>
                    <div class="p-r">
                        <span class="p-a t-50 tty-n50 r-0 pr-0c5 tooglePassword">{% include '@App/img/password_eye.html.twig' %}</span>
                        {{form_row(form.password, {'attr': {"placeholder" : "*******", "class":"br-15 p-0c75 b-black-10 w-100 c-black-60"}})}}
                    </div>
                    <p class="ff-body fs-xxs c-black-20 mt-0c25">Doit contenir 8 caractères avec une majuscule et un chiffre.</p>

                    <div class="mt-3 d-f ai-c">
                        <input name="cgu" id="cgu" type="checkbox">
                        <p class="ff-body fs-xxs c-black pl-0c5">J’ai lu et j’accepte les <a href="" class="c-blue fw-600 td-n">Conditions d’utilisation</a> et la <a href="" class="c-blue fw-600 td-n">Politique de confidentialité</a>.</p>
                    </div>
        
                    <input class="bgc-blue br-xxl p-0c75 b-black-10 fs-sm c-white d-b w-100" type="submit" value="S'inscrire">
                    <input type="hidden" name="token" value="{{ csrf_token('registration_orga') }}"/>

                </form>
                <p class="ff-body fs-xs fw-400 c-black-20 mt-1 ta-c">Vous avez déjà un compte ? <a href="" class="c-blue fw-600 td-u">Se connecter</a></p>
            </div>
        </div>
    </section>
    {{form_end(form)}}
{% endblock %}
