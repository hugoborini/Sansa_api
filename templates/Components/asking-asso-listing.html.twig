<table class="list-n w-100 bc-c">
    <tr class="ff-body fs-s c-black bb-black-5">
        <th class="ta-l c-black-20 fw-400 pt-1 pb-1">Association</th>
        <th class="ta-l c-black-20 fw-400 pt-1 pb-1">N° Siret</th>
        <th class="ta-l c-black-20 fw-400 pt-1 pb-1">Date de <br/>demande</th>
        <th class="ta-l c-black-20 fw-400 pt-1 pb-1">N° RNA</th>
        <th class="ta-l c-black-20 fw-400 pt-1 pb-1">Contact</th>
        <th class="ta-l c-black-20 fw-400 pt-1 pb-1">Statut</th>
    </tr>
    
    {% for orga in orgas|filter(orga => orga.valitated == false)%}
        <tr class="ff-body c-black p-r {{ loop.last ? '' : 'bb-black-5' }}">
            <td class="fs-s c-blue fw-600 pt-1 pb-1" width="35%"><a href="{{path('app_asso_info', {idOrga: orga.id})}}" class="link-action td-n c-blue">{{orga.organizationName|u.truncate(40, '...')}}</a></td>
            <td class="fs-xs pt-1 pb-1">{{orga.siret}}</td>
            <td class="fs-xs pt-1 pb-1">{{orga.lastUpdata|date("m/d/Y")}}</td>
            <td class="fs-xs pt-1 pb-1">{{orga.rna}}</td>
            <td class="fs-xs pt-1 pb-1 mw-fc" width="12%">
                {{orga.phoneNumber is defined and orga.phoneNumber is not empty ? orga.phoneNumber|replace({' ' : ''}) : '-'  }}<br/>
                <span class="fs-xxs c-black-40 mw-fc">{{orga.organizationOwner.email}}</span>
            </td>
            <td class="pt-1 pb-1" width="11%">
                <p class="c-blue-xdark m-0 b-blue br-xxxl pl-1 pt-0c5 pr-1 pb-0c5 bgc-black-3 mw-fc">En attente</p>
            </td>
        </tr>
    {% endfor %}

</table>